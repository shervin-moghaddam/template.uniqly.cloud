@using Microsoft.AspNetCore.Mvc.Localization
@using template.Models
@using template.Resources
@inject IHtmlLocalizer<HomeResource> localizer
@inject ProjectSetupClass projectSetup
@{
    bool ShowLogo = false;
}
<div class="sidebar">
    <div class="brand-sec">
        @if (ShowLogo)
        {
            <div class="large-logo">
                <img src="./images/uniqlyIconLarge.png" alt="uniqly"/>
            </div>
        }
        else
        {
            <p class="company-name">@projectSetup.WebsiteTitle</p>
        }
        <div class="small-logo">
            <img src="./images/uniqlyIconSmall.png" alt="uniqly"/>
        </div>
        <div class="bars-icon">
            <i class="fa-solid fa-xmark"></i>
        </div>
    </div>
    <nav class="side-nav">
        
        <ul class="side-nav-items">

            <li class="side-nav-item active">
                <a class="nav-link side-nav-link" href="#">
                    <i class="fa-light fa-toggle-on"></i>
                    <div class="extra-nav-con">
                        <div class="nav-text">Forms examples</div>
                    </div>
                </a>
            </li>
            <li class="side-nav-item">
                <a class="nav-link side-nav-link" href="#">
                    <i class="fa-light fa-snowflake"></i>
                    <div class="extra-nav-con">
                        <div class="nav-text">Menu 2</div>
                    </div>
                </a>
            </li>

            <li class="side-nav-item">
                <a class="nav-link side-nav-link" href="#">
                    <i class="fa-light fa-grid-2-plus"></i>
                    <div class="extra-nav-con">
                        <div class="nav-text">Apps</div>
                        <div class="badge-icon">
                            <div class="nav-badge bg-secondary">2</div>
                            <i class="fa-solid fa-angle-right"></i>
                        </div>
                    </div>
                </a>
                <!-- 4 Active submanu -->
                <ul class="sidenav-submenu">
                    <li class="nav-item">
                        <a href="#">Layout 02</a>
                    </li>
                    <li class="nav-item">
                        <a href="#">Layout 03</a>
                    </li>
                    <li class="nav-item">
                        <a href="#">Layout 04</a>
                    </li>
                </ul>
            </li>

            <li class="side-nav-text">@localizer["HomeSidebar_Divider_Functions"]</li>
            <li class="side-nav-text-short"></li>
            <li class="side-nav-item">
                <a class="nav-link side-nav-link" href="#">
                    <i class="fa-duotone fa-gallery-thumbnails"></i>
                    <div class="extra-nav-con">
                        <div class="nav-text">Category 1</div>
                    </div>
                </a>
            </li>

            <li class="side-nav-item">
                <a class="nav-link side-nav-link" href="#">
                    <i class="fa-duotone fa-users"></i>
                    <div class="extra-nav-con">
                        <div class="nav-text">Menu A</div>
                    </div>
                </a>
            </li>
            <li class="side-nav-item">
                <a class="nav-link side-nav-link" href="#">
                    <i class="fa-light fa-shop"></i>
                    <div class="extra-nav-con">
                        <div class="nav-text">Menu B</div>
                    </div>
                </a>
            </li>
            <li class="side-nav-item">
                <a class="nav-link side-nav-link" href="#">
                    <i class="fa-light fa-industry-windows"></i>
                    <div class="extra-nav-con">
                        <div class="nav-text">Menu C</div>
                    </div>
                </a>
            </li>

        </ul>
    </nav>
</div>
<script src="js/sidebar.js"></script>
